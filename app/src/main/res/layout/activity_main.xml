<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="@string/first_rxjava_example"/>

    <Button
        android:id="@+id/button_buffer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="@string/go_to_buffer"/>

    <Button
        android:id="@+id/button_observer_example"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="@string/go_to_observers_example"/>

    <Button
        android:id="@+id/button_map_example"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="@string/go_to_map"/>

    <Button
        android:id="@+id/button_mathematical_op_example"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="@string/go_to_mathematical_operators"/>

    <Button
        android:id="@+id/button_concat_merge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:text="@string/go_to_concat_merge"/>
</LinearLayout>